@model IEnumerable<MvcRugby.Models.Competition>

@{
    ViewData["Title"] = "Index";
}

<h1>Competitions - Seasons</h1>

<br>
<h4>Create New Competition - Season</h4>
<a class="btn btn-primary" asp-action="Create">Create</a>
<br>

<!-- Add SCompetition cards -->
@if (Model != null && Model.Any())
{
  <div class="container">
    <div class="row">
      @foreach (var season in Model)
      {
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            @* <img class="card-img-top" src="@Html.DisplayFor(modelItem => season.Image)" alt="@Html.DisplayNameFor(model => product.Image)" width="100%", height = "400px"> *@
            <div class="card-body">
              <h5 class="card-title">@season.Competition_Name</h5> 

            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">@season.Start_Date</li>
              <li class="list-group-item">@season.End_Date</li>
              <li class="list-group-item">@season.Year</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" asp-action="Index"  asp-route-id="@season.Id" asp-controller="CompetitionRound">Select</a> <!-- Redirect to Rounds Index View -->
                <a class="btn btn-success" asp-action="Details" asp-route-id="@season.Id">View Details</a>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@season.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@season.Id">Delete</a>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
}
else
{
  <p>No seasons / competitions found.</p>
}

