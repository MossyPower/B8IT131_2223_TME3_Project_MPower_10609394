@model IEnumerable<MvcRugby.Models.Club>

@{
    ViewData["Title"] = "Index";
}
<h1>Club</h1>
<br>

<div class="container">
  <hr />
    <div class="p-3 mb-2 bg-dark text-white">
      <h4>Admin Tools</h4>
      <br>
      <a asp-action="Create" class="btn btn-primary">Add New Club</a>
    </div>
  <hr />
</div>

@if (Model != null && Model.Any())
{
  <table class="table">
    <thread>
      <tr>
        <th scope="col">Club Id</th>
        <th scope="col">Sport Radar Competitor Id</th>
        <th scope="col">Club Name</th>
        <th scope="col">Competition</th>
        <th scope="col">Players </th>
        <th scope="col"></th>
      </tr>
    </thread>
    <tbody>
        @foreach(var club in Model)
        {
          <tr>
            <td>@club.Id</td>
            <td>@club.SportRadar_Competitor_Id</td>
            <td>@club.Club_Name</td>
            <td>@club.Competition</td>
            <td>@club.Players</td>
            <td>
              <a class="btn btn-primary" asp-action="Index"  asp-route-id="@club.Id" asp-controller="CompetitionRound">Select</a>
              <a class="btn btn-success" asp-action="Details" asp-route-id="@club.Id">View Details</a>
              <a class="btn btn-warning" asp-action="Edit" asp-route-id="@club.Id">Edit</a>
              <a class="btn btn-danger" asp-action="Delete" asp-route-id="@club.Id">Delete</a>
            </td>
          </tr>
        }
    </tbody>
  </table>
}
else
{
  <p>No Clubs found</p>
}