@model MvcRugby.Models.Club
@{
    ViewData["Title"] = "Create";
}

<h1>Create Club</h1>

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SportRadar_Competitor_Id" class="control-label"></label>
                <input asp-for="SportRadar_Competitor_Id" class="form-control" />
                <span asp-validation-for="SportRadar_Competitor_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club_Name" class="control-label"></label>
                <input asp-for="Club_Name" class="form-control" />
                <span asp-validation-for="Club_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition" class="control-label"></label>
                <input asp-for="Competition" class="form-control" />
                <span asp-validation-for="Competition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Players" class="control-label"></label>
                <input asp-for="Players" class="form-control" />
                <span asp-validation-for="Players" class="text-danger"></span>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class ="btn btn-secondary reset-btn" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>