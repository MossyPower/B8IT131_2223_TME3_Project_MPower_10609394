@model MvcRugby.Models.Club

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Club</h1>

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClubId" />
            <div class="form-group">
                <label asp-for="SportRadar_Competitor_Id" class="control-label"></label>
                <input asp-for="SportRadar_Competitor_Id" class="form-control" />
                <span asp-validation-for="SportRadar_Competitor_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club_Name" class="control-label"></label>
                <input asp-for="Club_Name" class="form-control" />
                <span asp-validation-for="Club_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionId" class="control-label"></label>
                <input asp-for="CompetitionId" class="form-control" type="number" />
                <span asp-validation-for="CompetitionId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
                <a class ="btn btn-secondary reset-btn" asp-action="Details">Back to List</a>
            </div>
        </form>
    </div>
</div>
<br>