@model MvcRugby.Models.Fixture

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>New [Competition Name] Fixture</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Competition Id</label>
                <input asp-for="CompetitionId" class="form-control" type="number"/>
                <span asp-validation-for="CompetitionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Sportradar Sport Event Id</label>
                <input asp-for="SrSportEventId" class="form-control" />
                <span asp-validation-for="SrSportEventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Round Number</label>
                <input asp-for="RoundNumber" class="form-control" type="number"/>
                <span asp-validation-for="RoundNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Start Time</label>
                <input asp-for="StartTime" class="form-control" type="datetime-local"/>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Home Score</label>
                <input asp-for="HomeScore" class="form-control" type="number"/>
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Away Score</label>
                <input asp-for="AwayScore" class="form-control" type="number"/>
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr>

<div>
    <a class ="btn btn-secondary reset-btn" asp-route-competitionId="@Model.CompetitionId" asp-action="Index">Back to fixtures</a>
</div>
<br>