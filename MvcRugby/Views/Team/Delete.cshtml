@model MvcRugby.Models.Team

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Team</h1>

<h3>Are you sure you want to delete this Team?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeamId)
        </dt>  
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SrCompetitorId)
        </dt>  
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>  
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Players)
        </dt>
    </dl>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class ="btn btn-secondary reset-btn" asp-action="Index">Back to List</a>
    </form>
</div>
