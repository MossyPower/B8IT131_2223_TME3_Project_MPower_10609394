@model IEnumerable<MvcRugby.Models.Team>

@{
    ViewData["Title"] = "Index";
}
<h1>Club</h1>
<br>

<div class="container">
  <hr />
    <div class="p-3 mb-2 bg-dark text-white">
      <h4>Admin Tools</h4>
      <br>
      <a asp-action="Create" class="btn btn-primary">Add New Team</a>
    </div>
  <hr />
</div>

@if (Model != null && Model.Any())
{
  <table class="table">
    <thread>
      <tr>
        <th scope="col">Team Id</th>
        <th scope="col">Sport Radar Competitor Id</th>
        <th scope="col">Team Name</th>
        <th scope="col">Country</th>
        <th scope="col"></th>
      </tr>
    </thread>
    <tbody>
        @foreach(var team in Model)
        {
          <tr>
            <td>@team.TeamId</td>
            <td>@team.SrCompetitorId</td>
            <td>@team.TeamName</td>
            <td>@team.Country</td>
            <td>
              <a class="btn btn-primary" asp-action="Index"  asp-route-id="@team.TeamId" asp-controller="CompetitionRound">Select</a>
              <a class="btn btn-success" asp-action="Details" asp-route-id="@team.TeamId">View Details</a>
              <a class="btn btn-warning" asp-action="Edit" asp-route-id="@team.TeamId">Edit</a>
              <a class="btn btn-danger" asp-action="Delete" asp-route-id="@team.TeamId">Delete</a>
            </td>
          </tr>
        }
    </tbody>
  </table>
}
else
{
  <p>No Clubs found</p>
}